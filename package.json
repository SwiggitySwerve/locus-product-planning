{
  "name": "locus-product-planning",
  "version": "1.1.0",
  "description": "AI-powered product planning for OpenCode - Vision → Features → Design → Build",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./skills": "./skills",
    "./skills/*": "./skills/*"
  },
  "files": [
    "dist",
    "skills",
    "agents",
    "hooks",
    ".claude-plugin",
    "opencode.json"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.plugin.json",
    "prepublishOnly": "npm run build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "cli": "npx tsx openspec/bin/cli.ts"
  },
  "keywords": [
    "opencode",
    "opencode-plugin",
    "claude",
    "claude-code",
    "ai",
    "planning",
    "project-management",
    "workflow",
    "skills"
  ],
  "author": "swiggityswerve",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SwiggitySwerve/locus-product-planning.git"
  },
  "bugs": {
    "url": "https://github.com/SwiggitySwerve/locus-product-planning/issues"
  },
  "homepage": "https://github.com/SwiggitySwerve/locus-product-planning#readme",
  "peerDependencies": {
    "@opencode-ai/plugin": ">=1.0.0"
  },
  "peerDependenciesMeta": {
    "@opencode-ai/plugin": {
      "optional": true
    }
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@opencode-ai/plugin": "^1.1.28",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^8.53.1",
    "@typescript-eslint/parser": "^8.53.1",
    "eslint": "^9.39.2",
    "glob": "^10.3.10",
    "globals": "^17.0.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.21.0",
    "typescript": "^5.3.0",
    "vitest": "^1.2.0",
    "yaml": "^2.3.4"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
